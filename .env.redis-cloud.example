# Redis Cloud configuration
# IMPORTANT: This is an example file. Create a .env.redis-cloud file with your actual credentials
# DO NOT commit your actual credentials to the repository

REDIS_HOST=your-host.redns.redis-cloud.com
REDIS_PORT=12345
REDIS_PASSWORD=your_password_here
# Set to true if your Redis Cloud instance requires TLS/SSL (recommended for production)
REDIS_USE_TLS=true
REDIS_ENABLED=true

# Connection settings
REDIS_RETRY_STRATEGY=true
REDIS_MAX_RETRIES=10
REDIS_CONNECT_TIMEOUT=30000
REDIS_KEEP_ALIVE=true

# Choose one URL format based on your TLS setting:

# For TLS connection (recommended for production):
REDIS_URL=rediss://:your_password_here@your-host.redns.redis-cloud.com:12345

# For non-TLS connection (less secure):
# REDIS_URL=redis://default:your_password_here@your-host.redns.redis-cloud.com:12345